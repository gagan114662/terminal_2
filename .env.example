# Claude Code Environment Configuration
# Copy this file to .env and fill in your values

# Model Configuration
CLAUDE_MODEL=claude-3.5-sonnet
CLAUDE_API_KEY=your_api_key_here
CLAUDE_TEMPERATURE=0.7
CLAUDE_TOP_P=0.95

# Security & Authentication
GITHUB_TOKEN=ghp_your_github_token_here
OPENAI_API_KEY=sk-your_openai_key_here
AWS_ACCESS_KEY_ID=your_aws_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_here

# Rate Limits
DAILY_TOKEN_BUDGET=500000
MAX_RETRIES=3
GLOBAL_QPS_LIMIT=10

# Session Configuration
SESSION_TIMEOUT_MS=600000
PER_CALL_TIMEOUT_MS=30000

# Review Configuration
AUTO_REQUEST_REVIEWERS=@username1,@username2
REQUIRE_APPROVAL_COUNT=1

# Tracing
TRACE_ENABLED=true
TRACE_SAMPLE_RATE=1.0
LOG_LEVEL=info

# Network Policy
NETWORK_EGRESS_POLICY=deny_all
ALLOWED_DOMAINS=localhost,127.0.0.1,github.com,api.github.com

# Safety Mode
REQUIRE_SAFE_MODE=true
DRY_RUN=false

# CodeRabbit Integration
CODERABBIT_CI_REQUIRED=false
CODERABBIT_SECURITY_THRESHOLD=high
CODERABBIT_COMPLEXITY_THRESHOLD=medium
